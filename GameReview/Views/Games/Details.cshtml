@model GameReview.Models.Review

<h1>Details</h1>

<div>
    <div class="row">
        <img id="thumbnail" src="@Html.DisplayFor(model => model.Game.ImagePath)" class="img-thumbnail col-sm-3">

        <h4 class="col">

            @Html.DisplayFor(model => model.Game.Title)

        </h4>


        <div class="col-sm-4">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Grade)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Grade)
                </dd>

            </dl>

            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.Summary)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Summary)
                </dd>

            </dl>
        </div>
    </div>

        <hr />

        <div class="row">

            <dl class="col-sm-4">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Game.Developer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Game.Developer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Game.Publisher)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Game.Publisher)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Game.ReleaseDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Game.ReleaseDate)
                </dd>





            </dl>

            <dl class="col-md-4">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProsPoints)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.ProsPoints)
                </dd>
            </dl>

            <dl class="col-md-4">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ConsPoints)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.ConsPoints)
                </dd>
            </dl>



        </div>

        <dl class="col">
            <dt class="col">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col">
                @Html.Raw(Model.Comment)
            </dd>

        </dl>



    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
